<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/NewReservation"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <TextView
        android:text="@string/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gadgetName_NewReservation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textColor="@color/accent" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:paddingTop="36dp">

        <TextView
            android:text="@string/inventory_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNumber_NewReservation"
            android:layout_column="0"
            android:layout_row="0"
            android:width="120dp" />

        <TextView
            android:text="@string/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:id="@+id/InventoryNumber_NewReservation" />

        <TextView
            android:text="@string/condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textCondition_NewReservation"
            android:layout_column="0"
            android:layout_row="1"
            android:width="120dp"
            android:paddingTop="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Condition_NewReservation"
            android:layout_column="1"
            android:layout_row="1"
            android:text="@string/textview" />

        <TextView
            android:text="@string/manufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:id="@+id/textManufactur_NewReservation"
            android:width="120dp"
            android:paddingTop="8dp" />

        <TextView
            android:text="@string/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Manufacturer_NewReservation"
            android:layout_column="1"
            android:layout_row="2" />

    </GridLayout>

</RelativeLayout>